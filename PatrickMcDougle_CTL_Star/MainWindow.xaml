<Window x:Class="PatrickMcDougle_CTL_Star.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatrickMcDougle_CTL_Star"
        mc:Ignorable="d"
		Background="Black"
        Title="Patrick McDougle's CTL* Application" Height="720" Width="1280">

	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="18" />
			<RowDefinition Height="10" />
			<RowDefinition Height="40" />
			<RowDefinition Height="40" />
			<RowDefinition Height="40" />
			<RowDefinition Height="40" />
			<RowDefinition Height="10" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="10" />
		</Grid.RowDefinitions>

		<Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="13">
			<MenuItem Header="_File">
				<MenuItem Header="_Open" Click="MenuItem_Open_Click" />
				<MenuItem Header="_Save" Click="MenuItem_Save_Click" />
				<Separator />
				<MenuItem Header="_Exit" />
			</MenuItem>
		</Menu>

		<!--<TextBox Grid.Column="2" Grid.Row="1" Text="Sample Text" Grid.ColumnSpan="8" />-->
		<!-- States -->
		<Label Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource Label}">States:</Label>
		<TextBox Grid.Column="2" Grid.Row="2" Text="{Binding WriteStates, Mode=OneWay}" IsReadOnly="True" Grid.ColumnSpan="8" />
		<Button Grid.Row="2" Grid.Column="10" Click="Button_Add_State_Click">ADD</Button>
		<Button Grid.Row="2" Grid.Column="11" Click="Button_Del_State_Click">DEL</Button>

		<!-- Edges -->
		<Label Grid.Row="3" Grid.ColumnSpan="2" Style="{StaticResource Label}">Binary Relations:</Label>
		<TextBox Grid.Column="2" Grid.Row="3" Text="{Binding WriteBinaryRelations, Mode=OneWay}" Grid.ColumnSpan="8" />
		<Button Grid.Row="3" Grid.Column="10" Click="Button_Add_Binary_Relation_Click">ADD</Button>
		<Button Grid.Row="3" Grid.Column="11" Click="Button_Del_Binary_Relation_Click">DEL</Button>

		<!-- Formulas -->
		<Label Grid.Row="4" Grid.ColumnSpan="2" Style="{StaticResource Label}">Labeling Functions:</Label>
		<TextBox Grid.Column="2" Grid.Row="4" Text="{Binding WriteLabelingFunctions, Mode=OneWay}" Grid.ColumnSpan="8" />
		<Button Grid.Row="4" Grid.Column="10" Click="Button_Add_Labeling_Function_Click">ADD</Button>
		<Button Grid.Row="4" Grid.Column="11" Click="Button_Del_Labeling_Function_Click">DEL</Button>

		<!-- Path -->
		<Label Grid.Row="5" Grid.ColumnSpan="2" Style="{StaticResource Label}" Content="Path:" />
		<TextBox Grid.Column="2" Grid.Row="5" Text="{Binding WritePath, Mode=OneWay}" Grid.ColumnSpan="8" />

		<Grid x:Name="canvasGrid" SnapsToDevicePixels="True" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="11" Grid.RowSpan="5">

			<Canvas Name="TheCanvas" SnapsToDevicePixels="True" Background="#111111"
					Width="{Binding ElementName=canvasGrid, Path=ActualWidth}"
					Height="{Binding ElementName=canvasGrid, Path=ActualHeight}">
				<Polygon
				Points="20,60 60,60 60,80 90,50 60,20 60,40 20,40 20,60"
				Stroke="DarkBlue"
				StrokeThickness="5"
				Stretch="Fill">
					<Polygon.Fill>
						<SolidColorBrush Color="Blue" />
					</Polygon.Fill>
					<Polygon.RenderTransform>
						<TranslateTransform X="15" />
					</Polygon.RenderTransform>
				</Polygon>
			</Canvas>
		</Grid>
	</Grid>
</Window>