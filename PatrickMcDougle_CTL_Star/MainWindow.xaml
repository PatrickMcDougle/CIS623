<Window x:Class="PatrickMcDougle_CTL_Star.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatrickMcDougle_CTL_Star"
        mc:Ignorable="d"
		Background="Black"
        Title="Patrick McDougle's CTL* Application" Height="720" Width="1280">


	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="18" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>

		<Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="12">
			<MenuItem Header="_File">
				<MenuItem Header="_Open" Click="MenuItem_Open_Click" />
				<MenuItem Header="_Save" Click="MenuItem_Save_Click" />
				<Separator />
				<MenuItem Header="_Exit" />
			</MenuItem>
		</Menu>

		<!-- States -->
		<Label Grid.Row="2" Grid.ColumnSpan="2">States:</Label>
		<TextBox Grid.Column="2" Grid.Row="2" Text="{Binding StatesListJson, Mode=OneWay}" Grid.ColumnSpan="10" />

		<!-- Edges -->
		<Label Grid.Row="3" Grid.ColumnSpan="2">Edges:</Label>
		<TextBox Grid.Column="2" Grid.Row="3" Text="{Binding EdgesListJson, Mode=OneWay}" Grid.ColumnSpan="10" />
		
		<!-- Formulas -->
		<Label Grid.Row="4" Grid.ColumnSpan="2">Formulas Per State:</Label>
		<TextBox Grid.Column="2" Grid.Row="4" Text="{Binding FormulasPerStateListJson, Mode=OneWay}" Grid.ColumnSpan="10" />

		<Canvas Name="TheCanvas" Background="Black" Grid.Column="3" Grid.Row="8">
			<Polygon
				Points="20,60 60,60 60,80 90,50 60,20 60,40 20,40 20,60"
				Stroke="DarkBlue"
				StrokeThickness="5"
				Stretch="Fill">
				<Polygon.Fill>
					<SolidColorBrush Color="Blue" />
				</Polygon.Fill>
				<Polygon.RenderTransform>
					<TranslateTransform X="15" />
				</Polygon.RenderTransform>
			</Polygon>
		</Canvas>


		<!-- Other -->

		<Button Grid.Column="10" Grid.Row="12">Hello</Button>

		<TextBox TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Grid.Column="10" Grid.Row="11"></TextBox>
	</Grid>
</Window>